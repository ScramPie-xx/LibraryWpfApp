<Window x:Class="LibraryWpfApp.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню библиотеки" Height="677" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Управление библиотекой" FontSize="40" FontWeight="Bold" Margin="0,0,0,30" 
                   HorizontalAlignment="Center" Foreground="#1976D2"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Выдать книгу" Width="300" Height="60" Margin="0,15" FontSize="18" Click="MainWindow_Click"/>
            <Button Content="Выданные книги" Width="300" Height="60" Margin="0,15" FontSize="18" Click="IssuedBooks_Click"/>
            <Button Content="Добавить абонемент" Width="300" Height="60" Margin="0,15" FontSize="18" Click="AddAbonement_Click"/>
            <Button Content="Добавить книгу" Width="300" Height="60" Margin="0,15" FontSize="18" Click="AddBook_Click"/>
        </StackPanel>
    </Grid>
</Window>